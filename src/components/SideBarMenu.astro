---
const { sideBarActiveItemID } = Astro.props;
const activeClass = "bg-base-300"; // For primary color replace with `active` class
---

<ul class="menu grow shrink menu-md overflow-y-auto">
    <li><a class="py-3 text-base flex items-center" id="home" href="/"><i class="fas fa-home mr-2"></i>Inicio</a></li>
    <li><a class="py-3 text-base flex items-center" id="cadastro" href="/construction"><i class="fas fa-user-plus mr-2"></i>Cadastrar-se</a></li>
    <li><a class="py-3 text-base flex items-center" id="login" href="/construction"><i class="fas fa-sign-in-alt mr-2"></i>Fazer Login</a></li>
    <li><a class="py-3 text-base flex items-center" id="suporte" href="/construction"><i class="fas fa-headset mr-2"></i>Suporte</a></li>
    <li><a class="py-3 text-base flex items-center" id="config" href="/construction"><i class="fas fa-cog mr-2"></i>Configurações</a></li>
</ul>

<script define:vars={{ sideBarActiveItemID: sideBarActiveItemID, activeClass: activeClass }}>
const activeItemElem = document.getElementById(sideBarActiveItemID);
activeItemElem && activeItemElem.classList.add(activeClass);
</script>
