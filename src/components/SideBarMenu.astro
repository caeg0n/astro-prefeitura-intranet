---
const { sideBarActiveItemID } = Astro.props;
const activeClass = "bg-base-300";
---

<style>
  .icon {
    margin-right: 8px;
  }
</style>

<ul class="menu grow shrink menu-md overflow-y-auto">
    <li><a class="py-3 text-base flex items-center" id="home" href="/"><span class="icon">🏠</span>Inicio</a></li>
    <li><a class="py-3 text-base flex items-center" id="cadastro" href="/construction"><span class="icon">📝</span>Cadastrar-se</a></li>
    <li><a class="py-3 text-base flex items-center" id="login" href="/construction"><span class="icon">🔑</span>Fazer Login</a></li>
    <li><a class="py-3 text-base flex items-center" id="suporte" href="/construction"><span class="icon">🆘</span>Suporte</a></li>
    <li><a class="py-3 text-base flex items-center" id="config" href="/construction"><span class="icon">⚙️</span>Configurações</a></li>
</ul>

<script define:vars={{ sideBarActiveItemID: sideBarActiveItemID, activeClass: activeClass }}>
const activeItemElem = document.getElementById(sideBarActiveItemID);
activeItemElem && activeItemElem.classList.add(activeClass);
</script>

